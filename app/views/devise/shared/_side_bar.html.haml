.side-bar
  .side-bar__user-name
    %h3.side-bar__user-name__top-items
      %p.side-bar__user-name__top-items__name
        = current_user.name
      %ul.side-bar__user-name__top-items__menu
        %li.side-bar__user-name__top-items__edit-user
          = link_to new_group_path do
            = fa_icon 'pencil-square-o', class: 'icon'
        %li.side-bar__user-name__top-items__new-group
          = link_to edit_user_path(current_user) do
            = fa_icon 'cog', class: 'icon'
  .side-bar__group
    - current_user.groups.each do |group| 
      .side-bar__group__list
        = link_to group_messages_path(group)  do
          .side-bar__group__list__name
            = group.name
          .side-bar__group__list__message
            = group.show_last_message